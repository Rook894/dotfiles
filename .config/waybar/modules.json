        "format-icons": [
            "ï‰„ ",
            "ï‰ƒ ",
            "ï‰‚ ",
            "ï‰ ",
            "ï‰€ "
        ]
    },
    "pulseaudio": {
    "format": "ï€¨  {volume}%",
    "format-bluetooth": "ïŠ”  {volume}%",
    "format-muted": "ïš©  0%",
    "format-source": "ï„°  {volume}%",
    "format-source-muted": "ï„±",
    "format-icons": {
        "default": [
        "ï€¦",  // low
        "ï€§",  // mid
        "ï€¨"   // high
        ]
    },
    "on-click": "pavucontrol"
    },
    "disk": {
        "interval": 120,
        "format": "ğŸ–´ {percentage_used}% ",
